<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.TV.DashboardFragment">

    <com.google.android.exoplayer2.ui.StyledPlayerView
        android:id="@+id/playvideo_tv"
        android:layout_width="0dp"
        android:layout_height="240dp"
        app:controller_layout_id="@layout/custom_player_control"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewtv"
        app:resize_mode="fixed_width"
        app:show_buffering="when_playing" />

    <ProgressBar
        android:id="@+id/progressBar_tv"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/playvideo_tv"
        app:layout_constraintEnd_toEndOf="@+id/playvideo_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/playvideo_tv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/viewtv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>